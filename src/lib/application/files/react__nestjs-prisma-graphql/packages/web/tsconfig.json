{
  "include": ["src", "types"],
  "exclude": ["node_modules", "dist"],
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // "module": "ESNext",
    "target": "ES5",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "src/*": ["src/*"]
    },
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "noEmit": true
  }
}
