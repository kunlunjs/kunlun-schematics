{
  "$schema": "http://json-schema.org/schema",
  "$id": "SchematicsKunlunApplication",
  "title": "Kunlun Application Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the application.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the new project?"
    },
    "type": {
      "type": "string",
      "description": "The type of the application.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Which project type would you want to choice?\n  ðŸ‘‰ react\n  ðŸ‘‰ vue\n  ðŸ‘‰ taro\n  ðŸ‘‰ uniapp\n  ðŸ‘‰ nest-prisma-restful\n  ðŸ‘‰ nest-prisma-graphql\n  ðŸ‘‰ react+nest-prisma-restful\n  ðŸ‘‰ react+nest-prisma-graphql\n  ðŸ•º"
    },
    "author": {
      "type": "string",
      "description": "Kunlun application author.",
      "default": ""
    },
    "description": {
      "type": "string",
      "description": "Kunlun application description.",
      "default": ""
    },
    "directory": {
      "type": "string",
      "description": "Kunlun application destination directory."
    },
    "strict": {
      "type": "boolean",
      "description": "With TypeScript strict mode.",
      "default": false
    },
    "version": {
      "type": "string",
      "description": "Kunlun application version.",
      "default": "0.0.1"
    },
    "language": {
      "type": "string",
      "description": "Kunlun application language."
    },
    "packageManager": {
      "type": "string",
      "description": "Kunlun application package manager."
    },
    "dependencies": {
      "type": "string",
      "description": "Kunlun application dependencies."
    },
    "devDependencies": {
      "type": "string",
      "description": "Kunlun application development dependencies."
    }
  },
  "required": ["name"]
}
